@model IEnumerable<ProyectoCompuCibVista.Models.Contacto>

@{
    ViewData["Title"] = "ListarContactos";
    Layout = "~/Views/Shared/PRUEBA.cshtml";
}
<h1 style="color: white;">Listado de Contactos</h1>

    <div class="table-responsive-sm">
    <table class="table table-striped table-light table-hover">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.IdContacta)
            </th>
            <th>
                <p>Nombres y Apellidos</p>
            </th>
            <th>
                <p>Correo</p>
            </th>
            <th>
                <p>Asunto</p>
            </th>
            <th>
                <p>Mensaje</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td hidden>
                @Html.DisplayFor(modelItem => item.IdContacta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreapellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.asunto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mensaje)
            </td>
            <td>

                        @Html.ActionLink("", "eliminarContacto", new { id = item.IdContacta }, new { @class = "bi bi-trash" })
            </td>
        </tr>
}
    </tbody>
</table>
</div>
