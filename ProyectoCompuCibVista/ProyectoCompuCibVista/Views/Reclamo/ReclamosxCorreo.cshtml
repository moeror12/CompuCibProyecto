@model IEnumerable<ProyectoCompuCibVista.Models.Reclamo>

@{
    ViewData["Title"] = "ReclamosxCorreo";
    Layout = "~/Views/Shared/PRUEBA.cshtml";
}

<h1 style="color: white;">Listado de Reclamos</h1>
<div class="container mb-3">
    <h5 style="color: white">Ingrese Correo de cliente</h5>
    <div class="row">
        <div class="col">
            <form class="d-none d-md-flex input-group w-auto my-auto" action="/Reclamo/ReclamosxCorreo" method="post">


            <input autocomplete="off" type="search" id="correo" name="coreo" value="" class="form-control rounded" style="min-width: 225px;" />
            <button class="input-group-text border-0"><i class="fas fa-search"></i></button>
</form>
</div>
</div>
</div>
<div class="table-responsive-sm">
<table class="table table-striped table-light table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdReclamo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaReclamo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVenta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdReclamo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaReclamo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVenta)
            </td>
            <td>
                        @Html.ActionLink("", "eliminarReclamo", new { id = item.IdReclamo }, new { @class = "bi bi-trash" })
            </td>
        </tr>
}
    </tbody>
</table>
</div>
