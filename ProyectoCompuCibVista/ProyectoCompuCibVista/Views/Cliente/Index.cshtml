@model IEnumerable<ProyectoCompuCibVista.Models.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/PRUEBA.cshtml";
}

<h1 style="color: white;">Listado de Clientes</h1>

<div class="table-responsive-sm">
    <table class="table table-striped table-light table-hover">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.CodigoCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contrasenia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dni)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                    <td hidden>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
                    <td hidden>
                @Html.DisplayFor(modelItem => item.CodigoCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contrasenia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dni)
            </td>
            <td>
                        @Html.ActionLink("", "eliminarCliente", new { id = item.IdCliente }, new { @class = "bi bi-trash" })
            </td>
        </tr>
}
    </tbody>
</table>
</div>
