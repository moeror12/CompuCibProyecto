@model IEnumerable<ProyectoCompuCibVista.Models.Venta>

@{
    ViewData["Title"] = "ListarVenta";
    Layout = "~/Views/Shared/PRUEBA.cshtml";
}

<h1 style="color: white;">Listado de Ventas</h1>

<div class="table-responsive-sm">
    <table class="table table-striped table-light table-hover">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.VentaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.landmark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.district)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.paymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdOrden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaVenta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                    <td hidden>
                @Html.DisplayFor(modelItem => item.VentaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.landmark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.district)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.paymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOrden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaVenta)
            </td>
            <td>
                        @Html.ActionLink("", "eliminarVenta", new { id = item.VentaId }, new { @class = "bi bi-trash" })
            </td>
        </tr>
}
    </tbody>
</table>
</div>