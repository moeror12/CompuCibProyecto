@model IEnumerable<ProyectoCompuCibVista.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/PRUEBA.cshtml";
}
@using (Html.BeginForm())
{
    <h5 style="color: white;">Ingrese Categoria</h5>
    @Html.TextBox("categoriaId", " ", new { @class = "form-control" })

    <input type="submit" value="FILTRAR" />
}
<h1 style="color: white;">Listado de Productos</h1>
<p>
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo Producto</a>
</p>
    <div class="table-responsive">
        <table class="table table-striped table-dark table-hover table-sm">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.ProductoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.CategoriaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td hidden>
                @Html.DisplayFor(modelItem => item.ProductoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Foto)*@
                <img src="@item.Foto" class="img-fluid" style="width:64px; height:64px" />
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.CategoriaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.ProductoId }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.ProductoId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Eliminar", "eliminarProducto", new { id = item.ProductoId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
    
