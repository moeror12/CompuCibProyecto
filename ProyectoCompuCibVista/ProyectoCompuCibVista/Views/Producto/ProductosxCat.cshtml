@model IEnumerable<ProyectoCompuCibVista.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/PRUEBA.cshtml";
}

<h1 style="color: white;">Listado de Productos</h1>
<div class="container mb-3">
    <div class="row">
        <div class="col">
            <form class="d-none d-md-flex input-group w-auto my-auto" action="/Producto/ProductosxCat" method="post">
                        <select class="btn btn-light" id="categoriaId" name="categoriaId">
                    <option value="0">Seleccion</option>
                    @foreach (var day in ViewBag.categoria as IEnumerable<SelectListItem>)
                    {
                        <option value="@day.Value">@day.Text</option>
                    }
                        </select>
                <button class="input-group-text border-0" type="submit" value=""><i class="fas fa-search"></i></button>
              
            </form>
        </div>
        <div class="col">
            <form class="d-none d-md-flex input-group w-auto my-auto" action="/Producto/ProductosxNom" method="post">
                <input autocomplete="off" type="search" id="nom" name="nom" value="" class="form-control rounded" style="min-width: 225px;" />
                <button class="input-group-text border-0"><i class="fas fa-search"></i></button>
            </form>
        </div>
        <div class="col">
            <form class="d-none d-md-flex input-group w-auto my-auto">
                <button class="input-group-text btn btn-secondary" asp-action="Create"><i class="fas fa-plus"></i></button>
            </form>

        </div>
    </div>
    </div>


    <div class="table-responsive-sm">
        <table class="table table-striped table-light table-hover">
        <thead class="thead-dark">
        <tr>
                <th hidden>
                @Html.DisplayNameFor(model => model.ProductoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.CategoriaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                    <td hidden>
                @Html.DisplayFor(modelItem => item.ProductoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                        <img src="@item.Foto" class="img-fluid" style="width:64px; height:64px" />
            </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td hidden>
                @Html.DisplayFor(modelItem => item.CategoriaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                        @Html.ActionLink("", "Edit", new { id = item.ProductoId }, new { @class = "bi bi-pencil" })
                        @Html.ActionLink("", "Details", new { id = item.ProductoId }, new { @class = "bi bi-eye" })
                        @Html.ActionLink("", "eliminarProducto", new { id = item.ProductoId }, new { @class = "bi bi-trash" })
            </td>
        </tr>
}
    </tbody>
</table>
    </div>

