@model IEnumerable<ProyectoCompuCibVista.Models.Producto>

@{
    ViewData["Title"] = "ProductosxNom";
    Layout = "~/Views/Shared/PRUEBA.cshtml";
}


<h1 style="color: white;">Listado de Productos</h1>

<div class="table-responsive-sm">
    <table class="table table-striped table-light table-hover">
        <thead class="thead-dark">
            <tr>
                <th hidden>
                    @Html.DisplayNameFor(model => model.ProductoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaCreacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Foto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.CategoriaId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.ProductoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreacion)
                    </td>
                    <td>
                        <img src="@item.Foto" class="img-fluid" style="width:64px; height:64px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.CategoriaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td>
                        @Html.ActionLink("", "Edit", new { id = item.ProductoId }, new { @class = "bi bi-pencil" })
                        @Html.ActionLink("", "Details", new { id = item.ProductoId }, new { @class = "bi bi-eye" })
                        @Html.ActionLink("", "eliminarProducto", new { id = item.ProductoId }, new { @class = "bi bi-trash" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
